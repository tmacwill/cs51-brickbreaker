<h3>Create New Account</h3>
<?php 
echo $form->create('User', array('action' => 'add'));
echo $form->input('username', array('label' => 'Choose a username'));
echo $form->input('password', array('label' => 'Choose a password'));
echo $form->input('password_confirm', array('label' => 'Confirm password'));
echo $form->input('email', array('label' => 'Your email address'));
echo $form->end('Create');
?>
